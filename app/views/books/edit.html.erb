<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  
  <h4>Title</h4>
  <%= f.text_field :title %> 
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %> 
  
<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>